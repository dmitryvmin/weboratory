{
  "compilerOptions": {
    "target": "es5",
    "lib": ["es5", "es6"],
    "module": "commonjs",
    "sourceMap": false,
    "strict": false,
    "rootDir": "./src",
    "outDir": "./dist",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "types": [
      "koa-body"
    ]
  },
  "include" : [
    "./src/**/*"
  ],
  "exclude": [
    "./node_modules",
    "./build",
    "./dist",
    "**/__tests__/*"
  ]
}